<div class = 'hiketitle'>
    <h3 id = 'title' class ='title'>{{hikeID}}</h3>
    {{!-- Only if a user posted a hike will they have the ability to edit or delete it --}}
    {{#if isMyHike}}
    <a class="waves-effect waves-light btn" href = "/hikes/edit/{{hike.id}}">edit</a>
    <form action="/hikes/{{hike.id}}?_method=delete" method="POST">
    <input class = 'waves-effect waves-light btn red' type="submit" value="Delete">
    </form>
    {{/if}}
    

</div>

    <div class = 'hiketop'>
        <div class = 'displayhike'>
            <div class = 'hikesummary'>
                <ul>
                   <li class = 'distance-align list stats'>
                        <div class = 'distance'></div>&nbsp;mi from DC
                    </li>
                    <li class = 'list stats'>
                        <div>Hike Length:&nbsp</div><div class = 'length'></div>&nbsp;mi
                    </li>
                    <li class = 'list stats'>
                        <div>Ascent:&nbsp</div><div class = 'ascent'></div>&nbsp;ft
                    </li>
                    <li class = 'list stats'>
                        <div>Difficulty:&nbsp</div><div class = 'difficulty'></div>
                    </li>
                    <li class = 'list stats'>
                        <div>Status:&nbsp</div><div class = 'status'></div>
                    </li>
                    
                </ul>
            </div>
            <div id="map" style="width:40%;height:300px;min-width:300px"></div>
        </div>
        <div class = 'details list stats'>
            
                Summary:&nbsp
                <div class = 'summarydetails'></div>
        
        </div>
        <div class = 'details list stats'>
                Condition:&nbsp
                <div class = 'statusdetails'></div>       
        </div>
        
    </div>


{{#if currentUser}}
<div class = 'userforms'>
<form action = "/hikes/{{hikeID}}" method = "POST">
<p>
    <label for="hikeComment">Comment</label>
    <textarea name="hikeComment" cols="40" rows="5" required></textarea>
</p>
<input class="waves-effect waves-light btn" type = "submit" value = "Add Comment" required>
</form>
</div> 
{{/if}}

<div class = "commentscontainer">
    <h3>Comments</h3>
    {{#unless currentUser}}
    <p>You must be logged in to add a comment</p>
    {{/unless}}
    <p></p>
    <ul>
        {{#unless hike.hikeComments}}
        <p>There are no comments, add the first!</p>
        {{/unless}}
        {{#each hike.hikeComments}}
        <div class = 'comment'>
            <p><strong>Posted by: {{this.commentor}}</strong></p>
            <li>
            {{this.commentText}}
            </li>
        </div>
        {{/each}}
    </ul>
</div>

<script type="text/javascript" src="../js/gethike.js"></script>
