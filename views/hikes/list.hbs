<h1>List Hikes</h1>

{{#if currentUser}}
        <a id = "postbtn" class="waves-effect waves-light btn" href = "/hikes/new">Post a new hike</a>
{{/if}}

<div class = 'hikecontainer'>
        {{#each hikes}}
        <a href = '/hikes/{{this.id}}'>
        <div class = 'hikecard'>
            {{!-- <li>
                <a href = '/hikes/{{this.id}}'>{{this.hikeTitle}}</a>
            </li> --}}
            <p>{{this.hikeTitle}}</p>
        </div>
        </a>
        {{/each}}
</div>