<h1 class = 'center-align'>All Hikes</h1>

{{!-- Only a logged in user can post a hike --}}
{{#if currentUser}}
        <a id = "postbtn" class="waves-effect waves-light btn" href = "/hikes/new">Post a new hike</a>
{{/if}}

<div class = 'hikecontainer'>
        {{#each hikes}}
        <a class = 'listlink' href = '/hikes/{{this.id}}'>
        <div class = 'hikecard'>
            <p>{{this.hikeTitle}}</p>
        </div>
        </a>
        {{/each}}
</div>